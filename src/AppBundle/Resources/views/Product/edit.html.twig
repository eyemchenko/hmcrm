{% extends '::dashboard.html.twig' %}

{% block title %}
    <div class="col-sm-4">
        <h2>{{ 'Product Edit'|trans }}</h2>
        <ol class="breadcrumb">
            <li>
                <a href="/">{{ 'home'|trans }}</a>
            </li>
            <li class="active">
                <strong>{{ 'Product Edit'|trans }}</strong>
            </li>
        </ol>
    </div>
{% endblock %}

{% block body -%}
    {{ form_start(edit_form) }}
    <div class="form-actions">
        <div class="col-sm-12">
            {{ form_widget(edit_form.submit, { 'attr': {'class': 'btn btn-primary'}}) }}
            <a class="btn btn-default" href="{{ path('product') }}">
                {{ 'backToTheList'|trans }}
            </a>
        </div>
    </div>

    {{ form_rest(edit_form) }}
    {{ form_end(edit_form) }}
{% endblock %}

{% extends '::dashboard.html.twig' %}

{% block title %}
    <div class="col-sm-4">
        <h2>{{ 'Products'|trans }}</h2>
        <ol class="breadcrumb">
            <li>
                <a href="/">{{ 'home'|trans }}</a>
            </li>
            <li class="active">
                <strong>{{ 'product'|trans }}</strong>
            </li>
        </ol>
    </div>
{% endblock %}

{% block body -%}
    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>{{ 'name'|trans }}</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>{{ 'title'|trans }}</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>{{ 'price'|trans }}</th>
                <td>{{ entity.price }}</td>
            </tr>
            <tr>
                <th>{{ 'currency'|trans }}</th>
                <td>{{ entity.currency }}</td>
            </tr>
        </tbody>
    </table>

    <div class="actions">
        <a class="btn btn-default" href="{{ path('product') }}">
            {{ 'backToTheList'|trans }}
        </a>

        <a class="btn btn-default"  href="{{ path('product_edit', { 'id': entity.id }) }}">
            {{ 'edit'|trans }}
        </a>
    </div>
{% endblock %}

{% extends '::dashboard.html.twig' %}

{% block title %}
    <div class="col-sm-4">
        <h2>{{ 'Template'|trans }}</h2>
        <ol class="breadcrumb">
            <li>
                <a href="/">{{ 'home'|trans }}</a>
            </li>
            <li class="active">
                <strong>{{ 'Template'|trans }}</strong>
            </li>
        </ol>
    </div>
{% endblock %}

{% block body -%}
    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>{{ 'name'|trans }}</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>{{ 'code'|trans }}</th>
                <td>{{ entity.code }}</td>
            </tr>
        </tbody>
    </table>

    <div class="actions">
        <a class="btn btn-default" href="{{ path('email_template') }}">
            {{ 'backToTheList'|trans }}
        </a>

        <a class="btn btn-default"  href="{{ path('template_edit', { 'id': entity.id }) }}">
            {{ 'edit'|trans }}
        </a>
        {{ form_start(delete_form) }}
            {{ form_widget(delete_form.submit) }}
        {{ form_end(delete_form) }}
    </div>
{% endblock %}

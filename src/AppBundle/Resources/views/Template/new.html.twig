{% extends 'dashboard.html.twig' %}

{% block title %}
    <div class="col-sm-4">
        <h2>{{ 'template.new'|trans }}</h2>
        <ol class="breadcrumb">
            <li>
                <a href="/">{{ 'home'|trans }}</a>
            </li>
            <li class="active">
                <strong>{{ 'template.new'|trans }}</strong>
            </li>
        </ol>
    </div>
{% endblock %}

{% block body %}
    {{ form_start(form) }}
        <div class="form-actions">
            <div class="col-sm-12">
                {{ form_widget(form.submit, { 'attr': {'class': 'btn btn-primary'}}) }}
                <a class="btn btn-default" href="{{ path('email_template') }}">
                    {{ 'backToTheList'|trans }}
                </a>
            </div>
        </div>

        {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}

{% extends '::dashboard.html.twig' %}

{% block title %} Person {% endblock %}

{% block body -%}
    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>First Name</th>
                <td>{{ entity.firstName }}</td>
            </tr>
            <tr>
                <th>Last Name</th>
                <td>{{ entity.lastName }}</td>
            </tr>
            <tr>
                <th>Company Name</th>
                <td>{{ entity.companyName }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ entity.Title}}</td>
            </tr>
            <tr>
                <th>Customerstatus</th>
                <td>{{ entity.valuesOfCustomerStatus[entity.customerStatus] }}</td>
            </tr>
            <tr>
                <th>Prospectstatus</th>
                <td>{{  entity.valuesOfProspectStatus[entity.prospectStatus] }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ entity.email }}</td>
            </tr>
            <tr>
                <th>Mobilephone</th>
                <td>{{ entity.mobilePhone }}</td>
            </tr>
            <tr>
                <th>Workphone</th>
                <td>{{ entity.workPhone }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ entity.address }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ entity.city }}</td>
            </tr>
            <tr>
                <th>Zipcode</th>
                <td>{{ entity.zipCode }}</td>
            </tr>
            <tr>
                <th>Region</th>
                <td>{{ entity.region }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ entity.country }}</td>
            </tr>
            <tr>
                <th>Tags</th>
                <td>{{ entity.tags }}</td>
            </tr>
        </tbody>
    </table>

    <div class="actions">
        <a class="btn btn-default" href="{{ path('person') }}">
            Back to the list
        </a>

        <a class="btn btn-default"  href="{{ path('person_edit', { 'id': entity.id }) }}">
            Edit
        </a>
        {{ form_start(delete_form) }}
        {{ form_widget(delete_form.submit) }}
        {{ form_end(delete_form) }}
    </div>
{% endblock %}

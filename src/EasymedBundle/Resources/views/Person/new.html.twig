{% extends 'dashboard.html.twig' %}

{% block title %} Person creation {% endblock %}

{% block body %}
    {{ form_start(form) }}
    <div class="form-actions">
        <div class="col-sm-12">
            {{ form_widget(form.submit, { 'attr': {'class': 'btn btn-primary'}}) }}
            <a class="btn btn-default" href="{{ path('person') }}">
                Back to the list
            </a>
        </div>
    </div>

    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}

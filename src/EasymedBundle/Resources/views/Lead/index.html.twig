{% extends 'dashboard.html.twig' %}

{% block title %}Lead list{% endblock %}

{% block body %}
    <table class="table table-striped table-bordered table-hover dataTables-example dataTable">
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('lead_show', { 'id': entity.id }) }}">{{ entity.firstName }}</a></td>
                <td>{{ entity.lastName }}</td>
                <td>{{ entity.companyName }}</td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.leadStatus }}</td>
                <td>{{ entity.source }}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.address }}</td>
                <td>{{ entity.tags }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('lead_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('lead_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('lead_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}

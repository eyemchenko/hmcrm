{% extends '::dashboard.html.twig' %}

{% block body -%}
    <h1>Deal list</h1>

    <table class="table table-striped table-bordered table-hover dataTables-example dataTable">
        <thead>
            <tr>
                <th>Name</th>
                <th>Contact</th>
                <th>Value</th>
                <th>Currency</th>
                <th>Source</th>
                <th>Tags</th>
                <th>Id</th>
                <th>Createdat</th>
                <th>Updatedat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('deal_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
                <td>{{ entity.contact }}</td>
                <td>{{ entity.value }}</td>
                <td>{{ entity.currency }}</td>
                <td>{{ entity.source }}</td>
                <td>{{ entity.tags }}</td>
                <td>{{ entity.id }}</td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updatedAt %}{{ entity.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('deal_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('deal_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('deal_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}

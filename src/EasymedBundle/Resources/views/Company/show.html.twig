{% extends '::dashboard.html.twig' %}

{% block title %} {{ 'company.title'|trans }} {% endblock %}

{% block body -%}
    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>{{ 'name'|trans }}</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>{{ 'customerstatus'|trans }}</th>
                <td>{{ entity.valuesOfCustomerStatus[entity.customerStatus] }}</td>
            </tr>
            <tr>
                <th>{{ 'prospectstatus'|trans }}</th>
                <td>{{  entity.valuesOfProspectStatus[entity.prospectStatus] }}</td>
            </tr>
            <tr>
                <th>{{ 'email'|trans }}</th>
                <td>{{ entity.email }}</td>
            </tr>
            <tr>
                <th>{{ 'mobilephone'|trans }}</th>
                <td>{{ entity.mobilePhone }}</td>
            </tr>
            <tr>
                <th>{{ 'workphone'|trans }}</th>
                <td>{{ entity.workPhone }}</td>
            </tr>
            <tr>
                <th>{{ 'address'|trans }}</th>
                <td>{{ entity.address }}</td>
            </tr>
            <tr>
                <th>{{ 'city'|trans }}</th>
                <td>{{ entity.city }}</td>
            </tr>
            <tr>
                <th>{{ 'zipcode'|trans }}</th>
                <td>{{ entity.zipCode }}</td>
            </tr>
            <tr>
                <th>{{ 'region'|trans }}</th>
                <td>{{ entity.region }}</td>
            </tr>
            <tr>
                <th>{{ 'country'|trans }}</th>
                <td>{{ entity.country }}</td>
            </tr>
            <tr>
                <th>{{ 'tags'|trans }}</th>
                <td>{{ entity.tags }}</td>
            </tr>
        </tbody>
    </table>

    <div class="actions">
        <a class="btn btn-default" href="{{ path('company') }}">
            {{ 'backToTheList'|trans }}
        </a>

        <a class="btn btn-default"  href="{{ path('company_edit', { 'id': entity.id }) }}">
            {{ 'edit'|trans }}
        </a>
        {{ form_start(delete_form) }}
        {{ form_widget(delete_form.submit) }}
        {{ form_end(delete_form) }}
    </div>
{% endblock %}
